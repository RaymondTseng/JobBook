<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <LinearLayout
        android:id="@+id/article_lv_title_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/article_lv_label_tv"
            style="@style/TextBlue12sptv"
            android:text="就业技巧"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/article_lv_title_tv"
            style="@style/Black16sptv"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/article_lv_label_tv"
            android:text="面试的时候千万不要穿正装"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:id="@+id/article_lv_ll_1"
        android:layout_below="@id/article_lv_title_ll"
        android:layout_alignLeft="@id/article_lv_title_ll"
        >
        <ImageView
            android:id="@+id/article_rc_time_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/time"/>
        <TextView
            style="@style/TextGray12sptv"
            android:layout_marginLeft="4dp"
            android:text="4分钟前"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/article_lv_iv"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_below="@id/article_lv_title_ll"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:src="@mipmap/suit"/>
    <TextView
        style="@style/TextGray12sptv"
        android:layout_alignLeft="@id/article_lv_title_ll"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/article_lv_ll_1"
        android:layout_toLeftOf="@id/article_lv_iv"
        android:layout_marginRight="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        android:text="        为什么我会这么说呢，因为我在面试的时候穿了正装，结果就是因为，结果只能四十个字"/>







</RelativeLayout>