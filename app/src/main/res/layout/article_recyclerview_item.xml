<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/article_recyclerview_item_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <LinearLayout
        android:id="@+id/article_lv_title_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/article_lv_label_tv"
            style="@style/TextBlue12sptv"
            android:layout_gravity="center_vertical"
            android:text="" />

        <TextView
            android:id="@+id/article_lv_title_tv"
            style="@style/Black16sptv"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/article_lv_label_tv"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/article_lv_ll_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/article_lv_title_ll"
        android:layout_below="@id/article_lv_title_ll"
        android:layout_marginTop="4dp">

        <ImageView
            android:id="@+id/article_rc_time_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/time" />

        <TextView
            android:id="@+id/article_lv_time_tv"
            style="@style/TextGray12sptv"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:text="" />
    </LinearLayout>

    <TextView
        android:id="@+id/article_lv_content_tv"
        style="@style/TextGray12sptv"
        android:layout_alignLeft="@id/article_lv_title_ll"
        android:layout_below="@id/article_lv_ll_1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@+id/article_lv_iv"
        android:paddingBottom="16dp"
        android:text="" />

    <ImageView
        android:id="@+id/article_lv_iv"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginRight="17dp"
        android:layout_alignTop="@+id/article_lv_ll_1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp"
        />


</RelativeLayout>