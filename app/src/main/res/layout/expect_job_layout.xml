<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">
    <TextView
        android:text="期待工作"
        style="@style/Black20sptv"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        >
        <EditText
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:id="@+id/text_cv_expect_job_positon_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="40dp"
            android:background="@drawable/text_cv_et_bg"
            android:textCursorDrawable="@drawable/edtitext_cursor"
            />
        <TextView
            android:text="职位"
            style="@style/Black16sptv"
            android:drawableRight="@drawable/text_cv_vertical_gray_line"
            android:gravity="center"
            android:drawablePadding="6dp"
            android:id="@+id/text_cv_expect_job_positon_tv"
            android:layout_marginLeft="16dp"
            android:layout_alignBaseline="@id/text_cv_expect_job_positon_et"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        >
        <EditText
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:id="@+id/text_cv_expect_job_salary_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:paddingBottom="8dp"
            android:background="@drawable/text_cv_et_bg"
            android:textCursorDrawable="@drawable/edtitext_cursor"
            />
        <TextView
            android:text="薪水"
            style="@style/Black16sptv"
            android:drawableRight="@drawable/text_cv_vertical_gray_line"
            android:gravity="center"
            android:drawablePadding="6dp"
            android:id="@+id/text_cv_expect_job_salary_tv"
            android:layout_marginLeft="16dp"
            android:layout_alignBaseline="@id/text_cv_expect_job_salary_et"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        >
        <EditText
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:id="@+id/text_cv_expect_job_location_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="72dp"
            android:paddingBottom="8dp"
            android:background="@drawable/text_cv_et_bg"
            android:textCursorDrawable="@drawable/edtitext_cursor"
            />
        <TextView
            android:text="工作地点"
            style="@style/Black16sptv"
            android:drawableRight="@drawable/text_cv_vertical_gray_line"
            android:gravity="center"
            android:drawablePadding="6dp"
            android:id="@+id/text_cv_expect_job_location_tv"
            android:layout_marginLeft="16dp"
            android:layout_alignBaseline="@id/text_cv_expect_job_location_et"
            />

    </RelativeLayout>

</LinearLayout>