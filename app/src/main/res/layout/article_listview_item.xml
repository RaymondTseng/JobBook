<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/article_lv_title_ll">
        <ImageView
            android:id="@+id/article_lv_label_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/engagement_24px_blue" />
        <TextView
            android:id="@+id/article_lv_title_tv"
            android:text="面试的时候千万不要穿正装"
            style="@style/Black16sptv"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        android:id="@+id/article_lv_iv_ll">
        <ImageView
            android:id="@+id/article_lv_iv"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:src="@mipmap/suit"
            android:layout_alignParentRight="true" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/article_lv_iv"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp">
            <ImageView
                android:id="@+id/article_lv_time_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/time"
                android:scaleType="centerInside"
                />
            <TextView
                android:text="4.15"
                style="@style/TextGray12sptv"
                android:id="@+id/article_lv_time_tv"
                android:layout_toRightOf="@id/article_lv_time_iv"/>

        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/article_lv_content_tv"
        android:text="为什么会这样说呢，因为我在面试的时候穿了正装，结果就因为穿了正装，面试官说我没有品位，然后就顺利成章的呗刷了。我当然问了面试官为什么..."
        style="@style/TextGray12sptv"
        android:layout_below="@id/article_lv_title_ll"
        android:layout_alignLeft="@id/article_lv_title_ll"
        android:layout_marginLeft="16dp"
        android:layout_toLeftOf="@id/article_lv_iv_ll"
        android:layout_marginRight="20dp"
        android:paddingBottom="16dp"
        android:layout_marginTop="6dp"
        />



</RelativeLayout>