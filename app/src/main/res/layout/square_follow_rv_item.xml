<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/square_follow_rl"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        >

        <ImageView
            android:id="@+id/square_follow_rv_head_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:src="@mipmap/default_32px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/square_follow_rv_username_tv"
                style="@style/TextBlackde14sptv"
                android:text="" />

            <TextView
                android:id="@+id/square_follow_rv_company_position_tv"
                style="@style/TextBlue12sptv"
                android:text="" />

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/square_follow_rv_content_tv"
        style="@style/TextBlackb316sptv"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="4dp"
        android:text="" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:id="@+id/favourite_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@mipmap/favorite_16px" />

            <TextView
                android:id="@+id/square_follow_rv_favourite_tv"
                style="@style/TextGray14sptv"
                android:layout_gravity="center_vertical"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/favourite_ll">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:scaleType="center"
                android:src="@mipmap/comment_16px" />

            <TextView
                android:id="@+id/square_follow_rv_comment_tv"
                style="@style/TextGray14sptv"
                android:layout_gravity="center_vertical"
                android:text="" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/square_follow_rv_favourite_ib"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@mipmap/favourite" />

        <TextView
            android:id="@+id/square_follow_rv_time_tv"
            style="@style/TextGray14sptv"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/square_follow_rv_favourite_ib"
            android:text="" />


    </RelativeLayout>
</LinearLayout>