<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_person_userinfo_ll"
    android:background="@color/colorSettingsBackgroundGray"
    android:orientation="vertical"
    android:weightSum="568">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="56"
        android:background="@color/colorBlue">

        <ImageButton
            android:id="@+id/person_userinfo_back_ib"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@mipmap/left_white" />

        <TextView
            style="@style/White20sptv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/person_userinfo_back_ib"
            android:text="详细信息" />
    </RelativeLayout>
    <include
        layout="@layout/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="600"
        android:visibility="gone"
        />

    <RelativeLayout
        android:id="@+id/person_userinfo_changehead_rl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="110"
        android:background="@color/colorWhite">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/person_userinfo_logo_iv"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:src="@mipmap/default_78px"/>

        <TextView
            style="@style/Black16sptv"
            android:layout_alignBottom="@+id/imageView"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toEndOf="@+id/person_userinfo_logo_iv"
            android:layout_toRightOf="@+id/person_userinfo_logo_iv"
            android:text="修改头像"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@mipmap/right_blue" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/person_userinfo_changeusername_rl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_weight="48"
        android:background="@drawable/person_big_bt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|left"
            android:paddingLeft="16dp"
            android:text="修改昵称"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/person_userinfo_changeusername_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="56dp"
            android:gravity="center_vertical|right"
            android:text="这是个昵称"
            android:textColor="@color/colorTextGray"
            android:textSize="14sp" />

    </RelativeLayout>

    <!--<Button-->
        <!--android:id="@+id/person_userinfo_changephone_bt"-->
        <!--style="@style/person_content_big_button_style"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="48"-->
        <!--android:text="修改手机号码"-->
        <!--android:textStyle="bold" />-->

    <Button
        android:id="@+id/person_userinfo_changepwd_bt"
        style="@style/person_content_big_button_style"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="48"
        android:text="修改密码"
        android:textStyle="bold" />


</LinearLayout>