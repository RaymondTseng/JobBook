<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorInputGray"
    android:weightSum="568">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="56"
        android:background="@color/colorWhite">
        <ImageButton
            android:id="@+id/setting_back_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/close"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="@null"/>
        <TextView
            android:text="简历"
            style="@style/Black20sptv"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textSize="16sp"
            android:textColor="@color/colorBlue"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="512">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite">
                <ImageView
                    android:id="@+id/text_cv_head_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="32dp"
                    android:src="@mipmap/add_head"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="你的姓名"
                    android:textColorHint="@color/colorTextGray"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/text_cv_head_iv"
                    android:layout_marginLeft="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:background="@null"
                    android:drawableBottom="@drawable/text_cv_name_bg"/>
            </RelativeLayout>
            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/base_information_layout"
                android:layout_marginTop="1dp"
                />
            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/education_experiment_layout"
                android:layout_marginTop="1dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="28dp"
                android:paddingTop="12dp"
                android:background="@color/colorWhite">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/add_blue"
                    android:layout_marginLeft="16dp"
                    android:background="@null"/>
                <TextView
                    android:layout_gravity="center"
                    android:text="添加教育经历"
                    style="@style/Black16sptv"
                    android:layout_marginLeft="16dp"/>
            </LinearLayout>
            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/job_experiment_layout"
                android:layout_marginTop="1dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="28dp"
                android:paddingTop="12dp"
                android:background="@color/colorWhite">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/add_blue"
                    android:layout_marginLeft="16dp"
                    android:background="@null"/>
                <TextView
                    android:layout_gravity="center"
                    android:text="添加工作经历"
                    style="@style/Black16sptv"
                    android:layout_marginLeft="16dp"/>
            </LinearLayout>
            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/expect_job_layout"
                android:layout_marginTop="1dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>