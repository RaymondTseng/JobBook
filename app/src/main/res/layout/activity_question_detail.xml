<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="568">
    <include
        android:layout_width="match_parent"
        android:layout_height="0dp"
        layout="@layout/question_detail_title_bar"
        android:layout_weight="56"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="456"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/question_detail_description"/>
            <ListView
                android:id="@+id/question_detail_lv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:divider="@drawable/listview_short_divider"
                android:dividerHeight="2dp"
                android:background="@color/colorWhite"></ListView>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="56"
        android:orientation="horizontal"
        android:weightSum="360"
        android:background="@color/colorWhite">
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="56"
            android:src="@mipmap/share_white"
            android:background="@color/colorBlue"/>
        <EditText
            android:id="@+id/question_detail_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="248"
            android:background="@null"
            android:hint="先打个招呼吧..."
            android:paddingLeft="16dp"/>
        <ImageButton
            android:id="@+id/question_detail_send_ib"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="56"
            android:src="@mipmap/right_blue"
            android:background="@null"/>
    </LinearLayout>
</LinearLayout>