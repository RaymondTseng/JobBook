<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_below="@+id/moment_rl"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@color/colorSettingsBackgroundGray" />

    <RelativeLayout
        android:id="@+id/moment_rl"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/moment_rv_head_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:src="@mipmap/default_32px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/moment_rv_head_iv"
            android:orientation="vertical">

            <TextView
                style="@style/TextBlackde14sptv"
                android:text="" />

            <TextView
                style="@style/TextBlue12sptv"
                android:text="" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/moment_rv_close_ib"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/close_grey" />

    </RelativeLayout>

</RelativeLayout>
