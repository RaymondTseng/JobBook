<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/getmessage_lv_item_head_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:src="@mipmap/default_40_px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="14dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/getmessage_lv_item_name_tv"
                style="@style/Black16sptv"
                android:text="" />

            <TextView
                android:id="@+id/getmessage_lv_item_time_tv"
                style="@style/TextGray12sptv"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical"
                android:text="" />

        </RelativeLayout>

        <TextView
            android:id="@+id/getmessage_lv_item_content_tv"
            style="@style/TextGray12sptv"
            android:text="" />

    </LinearLayout>

</LinearLayout>