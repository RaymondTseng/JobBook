<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:id="@+id/job_detail_name_ll">
        <TextView
            android:id="@+id/job_detail_name_tv"
            android:text="平面设计师"
            style="@style/Black20sptv"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_detail_name_tv">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/location_gray"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/job_detail_location_tv"
                android:text="广州"
                style="@style/TextGray16sptv"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/job_detail_salary_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.5K~2.5K"
            android:textSize="16sp"
            android:textColor="@color/colorBlue"
            android:layout_below="@id/job_detail_name_tv"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorBackgroundGray"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_below="@id/job_detail_salary_tv"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/job_detail_name_ll"
        android:id="@+id/job_detail_company_ll">
        <ImageView
            android:id="@+id/job_detail_company_logo_iv"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:src="@mipmap/apple_logo"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/job_detail_company_logo_iv"
            android:layout_marginLeft="16dp">
            <TextView
                android:id="@+id/job_detail_company_name_tv"
                android:text="苹果公司"
                style="@style/Black16sptv"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="认证"
                android:textSize="14sp"
                android:textColor="@color/colorYellow"
                android:layout_toRightOf="@id/job_detail_company_name_tv"
                android:layout_marginLeft="16dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/job_detail_company_name_tv"
                android:id="@+id/job_detail_company_location_ll"
                android:layout_marginTop="4dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/location_gray"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/job_detail_company_location_tv"
                    android:text="位于美国洛杉矶中国"
                    style="@style/TextGray16sptv"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/job_detail_company_location_ll"
                android:layout_marginTop="4dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/company"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/job_detail_company_description_tv"
                    android:text="公司规模巨大"
                    style="@style/TextGray16sptv"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_detail_company_logo_iv"
            android:id="@+id/job_detail_benefit_ll"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="五险一金"
                android:textColor="@color/colorBlue"
                android:textSize="12sp"
                android:background="@drawable/job_detail_benefit_bg"
                android:padding="5dp"
                />

        </RelativeLayout>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_blue"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:id="@+id/job_detail_tocompany_ib" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorBackgroundGray"
        android:layout_below="@id/job_detail_company_ll"
        android:layout_marginTop="15dp"/>

</RelativeLayout>