<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:weightSum="568">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="56"
        android:background="@color/colorBlue">

        <ImageButton
            android:id="@+id/activity_publish_close_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="@null"
            android:src="@mipmap/close_white" />

        <TextView
            android:id="@+id/activity_publish_question_release_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:clickable="false"
            android:text="发表"
            android:textColor="#61ffffff"
            android:textSize="16sp" />
    </RelativeLayout>

    <include
        layout="@layout/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="512" />

    <EditText
        android:id="@+id/activity_publish_question_title_et"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="48"
        android:background="@null"
        android:drawableTint="@color/colorBlack"
        android:hint="标题..."
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:textColorHint="@color/colorTextGray"
        android:textCursorDrawable="@drawable/edtitext_cursor" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/colorBackgroundGray" />

    <EditText
        android:id="@+id/activity_publish_question_content_et"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="408"
        android:background="@null"
        android:gravity="top|left"
        android:hint="详细描述一下问题的内容..."
        android:paddingLeft="16dp"
        android:textCursorDrawable="@drawable/edtitext_cursor" />

</LinearLayout>