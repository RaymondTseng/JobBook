<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="512">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="56"
        android:background="@color/colorBlue">
        <ImageButton
            android:id="@+id/activity_publish_close_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/close_white"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:background="@null"/>
        <TextView
            android:id="@+id/activity_publish_question_release_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发表"
            android:textColor="#61ffffff"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/activity_publish_question_title_et"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="48"
        android:hint="标题..."
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>
    <EditText
        android:id="@+id/activity_publish_question_content_et"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="408"
        android:hint="详细描述一下问题的内容..."
        android:gravity="top|left"
        android:paddingLeft="16dp"
        android:background="@null"/>

</LinearLayout>