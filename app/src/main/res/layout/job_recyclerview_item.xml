<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/job_recyclerview_item_ll"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/job_lv_iv"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="16dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/job_lv_iv"
            android:paddingBottom="16dp">

            <RelativeLayout
                android:id="@+id/job_lv_job_name_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/job_lv_time_tv"
                    style="@style/TextGray12sptv"
                    android:text="4.15~5.20"
                    android:layout_marginRight="16dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:id="@+id/job_lv_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@id/job_lv_time_tv"
                    android:layout_marginRight="10dp"
                    android:text="平面设计师"
                    android:textColor="@color/colorBlack"
                    android:layout_centerVertical="true"
                    android:textSize="16sp" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/job_lv_company_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/job_lv_job_name_rl"
                android:layout_marginTop="12dp">

                <ImageView
                    android:id="@+id/job_lv_company_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/company"
                    android:layout_gravity="center" />
                <TextView
                    android:id="@+id/job_lv_company_tv"
                    style="@style/TextGray12sptv"
                    android:layout_gravity="center"
                    android:text="卖苹果公司" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/job_lv_location_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/job_lv_company_ll"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/job_lv_location_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/location_gray" />

                <TextView
                    android:id="@+id/job_lv_location_tv"
                    style="@style/TextGray12sptv"
                    android:layout_gravity="center"
                    android:text="这是城市名" />

                <TextView
                    android:id="@+id/job_lv_salary_tv"
                    style="@style/TextGray12sptv"
                    android:paddingLeft="16dp"
                    android:text="¥1.5k~2.5k"
                    android:textColor="@color/colorBlue" />
            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>