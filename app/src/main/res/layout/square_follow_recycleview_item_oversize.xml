<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/square_follow_rl"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@color/colorSettingsBackgroundGray" />

        <RelativeLayout
            android:id="@+id/square_follow_rl"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/square_follow_rv_head_iv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:src="@mipmap/default_32px" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/square_follow_rv_head_iv"
                android:orientation="vertical">

                <TextView
                    style="@style/TextBlackde14sptv"
                    android:text="" />

                <TextView
                    style="@style/TextBlue12sptv"
                    android:text="" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp">

        <TextView
            style="@style/TextBlackb316sptv"
            android:text="" />

        <TextView
            style="@style/TextBlue16sptv"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="16dp"
            android:text="" />
    </FrameLayout>

    <include layout="@layout/follow_recycleview_item_footer" />

</LinearLayout>
