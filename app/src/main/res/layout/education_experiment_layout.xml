<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >
            <TextView
                android:id="@+id/education_exp_admission_tv"
                android:text="入学年月(2016.12)"
                style="@style/TextGray16sptv"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="26dp"
                android:background="@color/colorBackgroundGray"
                android:layout_marginLeft="14dp"/>
            <TextView
                android:id="@+id/education_exp_graduation_tv"
                android:text="毕业年月(2017.12)"
                style="@style/TextGray16sptv"
                android:layout_gravity="center"
                android:layout_marginLeft="14dp"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorBackgroundGray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        >
        <EditText
            android:id="@+id/text_cv_edu_school_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/text_cv_et_bg"
            android:drawableLeft="@drawable/text_cv_vertical_line"
            android:textCursorDrawable="@drawable/edtitext_cursor"
            />
        <TextView
            android:text="学校"
            style="@style/Black16sptv"
            android:layout_marginLeft="16dp"
            android:layout_alignBaseline="@id/text_cv_edu_school_et"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/text_cv_edu_major_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:hint="（选填）"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/text_cv_et_bg"
            android:drawableLeft="@drawable/text_cv_vertical_line"
            android:textCursorDrawable="@drawable/edtitext_cursor"
            />
        <TextView
            android:text="专业"
            style="@style/Black16sptv"
            android:layout_marginLeft="16dp"
            android:layout_alignBaseline="@id/text_cv_edu_major_et"
            />

    </RelativeLayout>
</LinearLayout>