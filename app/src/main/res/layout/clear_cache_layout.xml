<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="109dp"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="17dp"
        android:text="确定要清除缓存？"
        android:textColor="@color/colorInputGray"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/clear_cache_sure_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:text="确定"
            android:textColor="#457ff4"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/clear_cache_cancel_tv"
            android:layout_toStartOf="@+id/clear_cache_cancel_tv"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp" />

        <TextView
            android:id="@+id/clear_cache_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_alignTop="@+id/clear_cache_sure_tv"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30.5dp"
            android:layout_marginEnd="30.5dp" />

    </RelativeLayout>

</LinearLayout>