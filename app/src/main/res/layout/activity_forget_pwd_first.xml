<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="568"
    android:background="@color/colorBackgroundGray">
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="56"
        android:background="@color/colorBlue">
        <ImageButton
            android:id="@+id/forget_pwd_first_back_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/left_white"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"/>
        <TextView
            style="@style/White20sptv"
            android:text="忘记密码"
            android:layout_toRightOf="@id/forget_pwd_first_back_ib"
            android:layout_marginLeft="32dp"
            android:layout_centerVertical="true"/>
        <TextView
            style="@style/White16sptv"
            android:text="下一步"
            android:id="@+id/forget_pwd_first_next_tv"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <include
        layout="@layout/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="600"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="48"
        android:layout_marginTop="16dp"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/texttview3"
            style="@style/Black16sptv"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
            android:text="手机号"
            android:gravity="center"
            android:drawableRight="@drawable/text_cv_vertical_gray_line"
            android:drawablePadding="8dp"/>


        <EditText
            android:id="@+id/forget_pwd_first_phone_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/text_cv_et_bg"
            android:layout_toRightOf="@id/texttview3" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="48"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/texttview2"
            style="@style/Black16sptv"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
            android:text="验证码"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/text_cv_vertical_gray_line"/>

        <Button
            android:id="@+id/forget_pwd_first_code_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:background="@color/colorBlue"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />

        <EditText
            android:id="@+id/forget_pwd_first_code_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:background="@drawable/text_cv_et_bg"
            android:layout_toLeftOf="@id/forget_pwd_first_code_bt"
            android:layout_toRightOf="@id/texttview2"/>

    </RelativeLayout>

</LinearLayout>