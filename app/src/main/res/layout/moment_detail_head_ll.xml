<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/moment_detail_head_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="12dp"
            android:src="@mipmap/default_32px" />

        <TextView
            android:id="@+id/moment_detail_name_tv"
            style="@style/Black14sptv"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/moment_detail_head_iv"
            android:text="" />

        <TextView
            android:id="@+id/moment_detail_position_tv"
            style="@style/TextBlue12sptv"
            android:layout_below="@id/moment_detail_name_tv"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/moment_detail_head_iv"
            android:text="" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@color/colorSettingsBackgroundGray" />

    <!--<TextView-->
    <!--android:id="@+id/moment_detail_content_tv"-->
    <!--style="@style/Black16sptv"-->
    <!--android:layout_marginLeft="32dp"-->
    <!--android:layout_marginRight="32dp"-->
    <!--android:layout_marginTop="8dp"-->
    <!--android:text="    这里是一大段文字，我今天真的非常不想上班，但是老板又强制要求我上班，所以我辞职了" />-->
    <TextView
        android:id="@+id/moment_detail_content_tv"
        style="@style/Black16sptv"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:src="@mipmap/favorite_16px" />

        <TextView
            android:id="@+id/moment_detail_favourite_tv"
            style="@style/TextGray14sptv"
            android:layout_gravity="center_vertical"
            android:text="" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:background="@null"
            android:src="@mipmap/comment_16px" />

        <TextView
            android:id="@+id/moment_detail_comment_tv"
            style="@style/TextGray14sptv"
            android:layout_gravity="center_vertical"
            android:text="" />

        <TextView
            android:id="@+id/moment_detail_time_tv"
            style="@style/TextGray14sptv"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:text="" />
    </LinearLayout>
</LinearLayout>