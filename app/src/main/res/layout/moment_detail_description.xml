<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/moment_rl"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@color/colorSettingsBackgroundGray" />

        <LinearLayout
            android:id="@+id/moment_rl"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/moment_rv_head_iv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:src="@mipmap/default_32px" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/moment_rv_head_iv"
                android:orientation="vertical">

                <TextView
                    style="@style/TextBlackde14sptv"
                    android:text="张朝旭" />

                <TextView
                    style="@style/TextBlue12sptv"
                    android:text="职谱 扫地僧" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        style="@style/TextBlackb316sptv"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:text="       这里是一大段文字，我今天真的非常不想上班，但是老板又强制要求我上班，所以我辞职了" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:id="@+id/favourite_ll"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="center"
                android:src="@mipmap/favourite_gray" />

            <TextView
                android:id="@+id/moment_lv_favourite_tv"
                style="@style/TextGray14sptv"
                android:text="(2300)" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:layout_toRightOf="@+id/favourite_ll"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="center"
                android:src="@mipmap/comment" />

            <TextView
                android:id="@+id/moment_lv_comment_tv"
                style="@style/TextGray14sptv"
                android:text="(1200)" />

        </LinearLayout>

        <TextView
            style="@style/TextGray14sptv"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="32dp"
            android:text="5分钟前" />

    </RelativeLayout>
</LinearLayout>